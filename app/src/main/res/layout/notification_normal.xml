<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_notification"
    android:padding="5dp">
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/music_default_bg"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_icon"
        android:text="忘情水"
        android:layout_alignTop="@id/iv_icon"
        android:textColor="@android:color/black"
        android:layout_marginLeft="5dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tv_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_icon"
        android:layout_below="@id/tv_title"
        android:text="刘德华"
        android:textColor="@color/textgray"
        android:layout_marginLeft="5dp"
        android:textSize="16sp"/>
    <ImageView
        android:id="@+id/notification_play_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/selector_play_next"/>
    <ImageView
        android:id="@+id/notification_play_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/notification_play_next"
        android:layout_centerVertical="true"
        android:src="@drawable/selector_play_pre"/>
</RelativeLayout>