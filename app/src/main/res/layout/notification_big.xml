<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_notification"
    android:padding="5dp">
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/music_default_bg"
        />
    <RelativeLayout
        android:layout_toRightOf="@id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/audio_seek_thumb"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘情水"
            android:textColor="@android:color/black"
            android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent"
            android:layout_marginLeft="5dp"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:text="刘德华"
            android:layout_centerHorizontal="true"
            android:textColor="@color/textgray"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"/>
        <LinearLayout
            android:layout_below="@id/tv_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp">
            <ImageView
                android:id="@+id/notification_play_pre"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/selector_play_pre"/>
            <ImageView
                android:id="@+id/notification_playpause"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/selector_play"/>
            <ImageView
                android:id="@+id/notification_play_next"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/selector_play_next"/>

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>